<%= simple_form_for [:admin, @banner] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :position,  collection: ["top", "left", "right", "bottom"], selected: @banner.position %>
  </div>

  <%= f.input :banner_image %>
  <%= f.error :banner_image_content_type %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
