<%= simple_form_for [:admin, @speaker] do |f| %>
  
  
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :company %>
    <%= f.input :position %>
    <%= f.input :speaker_description %>
    <%= f.input :speech_title %>
    <%= f.input :speech_description %>
    <%= f.input :speech_day %>
    <%= f.input :speech_time,  collection: ["15:00 - 15:40", "15:40 - 16:20", "19:00 - 19:40", "19:40 - 20:20", "-------", "12:00 - 12:40"], selected: @speaker.speech_time %>
    <%= f.input :status,  collection: ["International Speakers", "Sales and Marketing", "Speeches for CEO's", "PM, lawyers and HR"], selected: @speaker.status %>
    <%= f.input :avatar %>
    <%= f.error :avatar_content_type %>
    

 
   
  
    <%= f.button :submit %>
  
<% end %>
